{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Run Script: dev",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "name": "Open in Chrome (Vite)",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-userdata"
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Open in Firefox (Vite)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "firefoxExecutable": "/usr/bin/firefox",
            "reAttach": true,
            "reloadOnAttach": true,
            "tmpDir": "${workspaceFolder}/.vscode/firefox-tmp",
            "log": {
                "fileName": "${workspaceFolder}/.vscode/firefox-debug-log.txt",
                "fileLevel": {
                    "default": "Debug"
                }
            }
        },
        {
            "type": "node",
            "name": "Attach to Node (Vite server)",
            "request": "attach",
            "processId": "${command:PickProcess}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Debug Vite App (Dev+Chrome)",
            "configurations": [
                "Run Script: dev",
                "Open in Chrome (Vite)"
            ]
        },
        {
            "name": "Debug Vite App (Dev+Firefox)",
            "configurations": [
                "Run Script: dev",
                "Open in Firefox (Vite)"
            ]
        }
    ]
}